<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ScrollView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView1">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="85.4dp"
                    android:src="@drawable/ctaicon"
                    android:id="@+id/imageView1" />

                <TextView
                    android:text="CORONAVIRUS (COVID-19) AWARENESS"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:gravity="center"
                    android:textColor="#0070b9"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:id="@+id/textView1" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="COVID-19 most commonly spreads between people who are in close contact through respiratory droplets or small particles produced when an infected person coughs, talks, or breathes."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textView2" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Growing evidence shows that droplets can remain suspended in the air and travel distances beyond six feet, according to the CDC. Indoor environments with poor ventilation increase the risk of transmission."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="PREVENTION"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:gravity="center"
                    android:textColor="#0070b9"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:id="@+id/textView4" />

                <TextView
                    android:text="- Wash your hands regularly with soap and water, or clean them with alcohol-based hand rub."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textView5" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="- Cover your mouth and nose with a mask when in public settings or around others."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textView6" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="- Maintain at least six feet distance between you and people coughing or sneezing."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textView7" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="- Avoid touching your face."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textView8" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="- Cover your mouth and nose when coughing or sneezing."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textView9" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="- Stay home if you feel unwell."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textView10" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="- Practice physical distancing by avoiding unnecessary travel and staying away from large groups of people."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textView11" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="HOTLINES"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:gravity="center"
                    android:textColor="#0070b9"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:id="@+id/textView14" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="DOH HOTLINES:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/textView17" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="02 894-COVID"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/textView12" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="02 894-26843"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/textView13" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="For PLDT, SMART, SUN, and TnT Subscribers:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/textView15" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="1555"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/textView16" />

                <Button
                    android:layout_marginTop="10dp"
                    android:text="BACK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0070b9"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:id="@+id/back" />

            </TableLayout>
        </ScrollView>
    </LinearLayout>
    
</LinearLayout>
